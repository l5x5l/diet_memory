<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bottom_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="고려은단 비타민C 1000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_decrease"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_increase"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_baseline_add"
        app:tint="@color/dark_green"
        app:layout_constraintTop_toTopOf="@id/tv_bottom_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_supplement_count"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_supplement_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1번"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tv_bottom_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom_name"
        app:layout_constraintEnd_toStartOf="@id/btn_increase"
        app:layout_constraintStart_toEndOf="@id/btn_decrease"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_decrease"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_remove"
        app:tint="@color/dark_green"
        app:layout_constraintTop_toTopOf="@id/tv_bottom_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom_name"
        app:layout_constraintEnd_toStartOf="@id/tv_supplement_count"
        app:layout_constraintStart_toEndOf="@id/tv_bottom_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>